extends layouts/layout.pug

prepend head
    title #{title}
    link(rel="stylesheet", href="/stylesheets/style.css", attr)
block content
    .row
        .col-md-3
            #rooms
            button#host.btn Host
            button#random.btn-primary Random
        .col-md-9.container-fluid(style='min-height: 80vh;')
            #loader
            #game
                table#op_info
                    tr
                        td.leftPart
                        td.centerPart
                        td.rightPart
                            span.mp
                            span.hand_num
                            span.deck_num
                table#board
                    tr(id="op_side")
                        td(x=0 y=0 class="zone placeable")
                        td(x=1 y=0 class="zone placeable")
                        td(x=2 y=0 class="zone placeable")
                        td(x=3 y=0 class="zone placeable")
                    tr(id="my_side")
                        td(x=0 y=1 class="zone placeable")
                        td(x=1 y=1 class="zone placeable")
                        td(x=2 y=1 class="zone placeable")
                        td(x=3 y=1 class="zone placeable")
                table#me_info
                    tr
                        td.leftPart
                        td.centerPart
                        td.rightPart
                            span.mp
                            span.hand_num
                            span.deck_num
                button#endTurn End Turn
                table#hand
                    tr
                        td(x=0 class="zone")
                        td(x=1 class="zone")
                        td(x=2 class="zone")
                        td(x=3 class="zone")
                        td(x=4 class="zone")
                        td(x=5 class="zone")
append foot
    script(src="/assets/socket.io.js")
    script(src="/javascripts/connect.js")

